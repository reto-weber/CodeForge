/* Constructor.ch Academic Design System */

/* CSS Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    font-size: 16px;
    scroll-behavior: smooth;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
    line-height: 1.6;
    color: #2c3e50;
    background-color: #ffffff;
    font-weight: 400;
}

/* Typography */
h1, h2, h3, h4, h5, h6 {
    font-weight: 600;
    line-height: 1.2;
    color: #1a1a1a;
}

h1 {
    font-size: 2.5rem;
    font-weight: 700;
}

h2 {
    font-size: 1.75rem;
    margin-bottom: 1rem;
}

h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
}

.lead {
    font-size: 1.125rem;
    line-height: 1.7;
    color: #4a5568;
    margin-bottom: 2rem;
}

/* Header Styles - Constructor.ch inspired */
.site-header {
    background-color: #ffffff;
    border-bottom: 1px solid #e2e8f0;
    padding: 1.5rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
}

.header-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo-section {
    flex: 1;
}

.institution-link {
    margin-bottom: 0.5rem;
}

.institution-name {
    color: #3182ce;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: color 0.3s ease;
}

.institution-name:hover {
    color: #2b6cb0;
}

.department {
    color: #718096;
    font-size: 0.85rem;
    margin-left: 0.5rem;
}

.logo-section h1 {
    font-size: 1.875rem;
    font-weight: 700;
    color: #1a202c;
    margin: 0.5rem 0 0.25rem 0;
}

.subtitle {
    font-size: 0.95rem;
    color: #718096;
    font-weight: 400;
}

.main-nav {
    display: flex;
    gap: 2.5rem;
}

.main-nav a {
    text-decoration: none;
    color: #4a5568;
    font-weight: 500;
    font-size: 0.95rem;
    padding: 0.5rem 0;
    border-bottom: 2px solid transparent;
    transition: all 0.3s ease;
}

.main-nav a:hover {
    color: #3182ce;
    border-bottom-color: #3182ce;
}

/* Main Content Layout */
.main-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem 4rem 2rem;
}

.container {
    width: 100%;
}

/* Section Styles */
section {
    margin: 3rem 0;
    padding: 2rem 0;
}

section:not(.welcome-section) {
    border-bottom: 1px solid #e2e8f0;
}

section:last-child {
    border-bottom: none;
}

section h2 {
    font-size: 1.75rem;
    font-weight: 600;
    color: #1a202c;
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid #3182ce;
    display: inline-block;
}

/* Welcome Section */
.welcome-section {
    padding: 3rem 0 4rem 0;
    background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
    margin: 0 -2rem 3rem -2rem;
    padding-left: 2rem;
    padding-right: 2rem;
}

.welcome-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
}

.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
}

.feature-card {
    background: #ffffff;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    text-align: left;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.feature-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
}

.feature-card h3 {
    color: #3182ce;
    margin-bottom: 1rem;
}

.feature-card p {
    color: #4a5568;
    line-height: 1.6;
}

/* Settings Section */
.settings-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 1.5rem;
}

.setting-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.setting-group label {
    font-weight: 500;
    color: #333;
    font-size: 0.95rem;
}

.input-with-unit {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.unit {
    color: #666;
    font-size: 0.9rem;
}

/* Form Elements */
select, input[type="number"] {
    padding: 0.75rem 1rem;
    border: 1px solid #cbd5e0;
    border-radius: 6px;
    font-size: 1rem;
    background-color: #ffffff;
    transition: all 0.3s ease;
    font-family: inherit;
}

select:focus, input[type="number"]:focus {
    outline: none;
    border-color: #3182ce;
    box-shadow: 0 0 0 3px rgba(49, 130, 206, 0.1);
}

select:hover, input[type="number"]:hover {
    border-color: #a0aec0;
}

/* Examples Section */
.examples-controls {
    margin-top: 1.5rem;
}

.examples-controls .setting-group {
    flex-direction: row;
    align-items: center;
    gap: 1rem;
}

.examples-controls select {
    flex: 1;
    max-width: 400px;
}

/* Code Editor */
.editor-container {
    margin: 1.5rem 0;
}

#code-editor {
    width: 100%;
    height: 400px;
    padding: 1.25rem;
    border: 1px solid #cbd5e0;
    border-radius: 8px;
    font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
    font-size: 14px;
    line-height: 1.5;
    background-color: #f7fafc;
    resize: vertical;
    transition: all 0.3s ease;
}

#code-editor:focus {
    outline: none;
    border-color: #3182ce;
    background-color: #ffffff;
    box-shadow: 0 0 0 3px rgba(49, 130, 206, 0.1);
}

/* Button Styles */
.btn {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 6px;
    font-size: 0.95rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    text-decoration: none;
    display: inline-block;
    font-family: inherit;
}

.btn-primary {
    background-color: #3182ce;
    color: white;
}

.btn-primary:hover {
    background-color: #2c5aa0;
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
}

.btn-success {
    background-color: #38a169;
    color: white;
}

.btn-success:hover {
    background-color: #2f855a;
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
}

.btn-secondary {
    background-color: #718096;
    color: white;
}

.btn-secondary:hover {
    background-color: #4a5568;
    transform: translateY(-1px);
}

.btn-danger {
    background-color: #e53e3e;
    color: white;
}

.btn-danger:hover {
    background-color: #c53030;
    transform: translateY(-1px);
}

.btn-outline {
    background-color: transparent;
    color: #3182ce;
    border: 1px solid #3182ce;
}

.btn-outline:hover {
    background-color: #3182ce;
    color: white;
}

.editor-actions {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
    flex-wrap: wrap;
}
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

.btn-primary {
    background-color: #0066cc;
    color: white;
}

.btn-primary:hover {
    background-color: #0052a3;
    transform: translateY(-1px);
}

.btn-success {
    background-color: #28a745;
    color: white;
}

.btn-success:hover {
    background-color: #218838;
    transform: translateY(-1px);
}

.btn-danger {
    background-color: #dc3545;
    color: white;
    animation: pulse 2s infinite;
}

.btn-danger:hover {
    background-color: #c82333;
    animation: none;
}

.btn-secondary {
    background-color: #6c757d;
    color: white;
}

.btn-secondary:hover {
    background-color: #5a6268;
    transform: translateY(-1px);
}

.btn-outline {
    background-color: transparent;
    color: #0066cc;
    border: 1px solid #0066cc;
}

.btn-outline:hover {
    background-color: #0066cc;
    color: white;
    transform: translateY(-1px);
}

@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
}

.editor-actions {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
    flex-wrap: wrap;
}

/* Output Section */
.status-indicator {
    margin-bottom: 1rem;
    padding: 1rem;
    border-radius: 6px;
    font-weight: 500;
    display: none;
}

.status-indicator.success {
    background-color: #d1f2eb;
    color: #0e5e3e;
    border: 1px solid #7dcea0;
    display: block;
}

.status-indicator.error {
    background-color: #fadbd8;
    color: #922b21;
    border: 1px solid #e74c3c;
    display: block;
}

.output-container {
    margin-top: 1.5rem;
}

.code-output {
    background-color: #1e1e1e;
    color: #d4d4d4;
    padding: 1.5rem;
    border-radius: 6px;
    font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
    font-size: 13px;
    line-height: 1.5;
    white-space: pre-wrap;
    min-height: 200px;
    max-height: 500px;
    overflow-y: auto;
    border: 1px solid #333;
}

/* Session Management */
.session-info-card {
    background-color: #f8f9fa;
    border: 1px solid #e9ecef;
    border-radius: 8px;
    padding: 1.5rem;
    margin-top: 1.5rem;
}

.session-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}

.session-header h3 {
    font-size: 1.1rem;
    font-weight: 600;
    color: #333;
    margin: 0;
}

.session-details {
    font-size: 0.9rem;
    color: #666;
}

.session-status, .container-status {
    background-color: #ffffff;
    padding: 0.75rem;
    border-radius: 4px;
    border: 1px solid #dee2e6;
    font-family: 'SF Mono', Monaco, monospace;
    font-size: 0.85rem;
    margin-bottom: 0.5rem;
}

/* Configuration Section */
.config-controls {
    margin-top: 1.5rem;
}

.config-editor {
    margin-top: 1.5rem;
    padding: 1.5rem;
    background-color: #f8f9fa;
    border-radius: 8px;
    border: 1px solid #e9ecef;
}

#config-textarea {
    width: 100%;
    height: 300px;
    padding: 1rem;
    border: 1px solid #d0d0d0;
    border-radius: 6px;
    font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
    font-size: 13px;
    line-height: 1.5;
    background-color: #ffffff;
    resize: vertical;
}

.config-actions {
    margin-top: 1rem;
    display: flex;
    gap: 1rem;
}

/* Footer */
.site-footer {
    background-color: #f8f9fa;
    border-top: 1px solid #e5e5e5;
    padding: 2rem 0;
    margin-top: 4rem;
}

.footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
}

.footer-content p {
    color: #666;
    font-size: 0.9rem;
}

.footer-links {
    display: flex;
    gap: 2rem;
}

.footer-links a {
    color: #0066cc;
    text-decoration: none;
    font-size: 0.9rem;
}

.footer-links a:hover {
    text-decoration: underline;
}

/* Responsive Design */
@media (max-width: 768px) {
    .header-content {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }

    .main-nav {
        gap: 1rem;
    }

    .main-content {
        padding: 1rem;
    }

    .settings-grid {
        grid-template-columns: 1fr;
    }

    .examples-controls .setting-group {
        flex-direction: column;
        align-items: stretch;
    }

    .editor-actions {
        flex-direction: column;
    }

    .footer-content {
        flex-direction: column;
        text-align: center;
    }

    .footer-links {
        justify-content: center;
    }

    #code-editor {
        height: 300px;
    }
}

@media (max-width: 480px) {
    .main-nav {
        flex-direction: column;
        gap: 0.5rem;
    }

    .btn {
        width: 100%;
    }
}